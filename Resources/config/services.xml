<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

   <parameters>
	   <parameter key="auth_cas_listener_class">Gorg\Bundle\CasBundle\Security\Firewall\CasListener</parameter>
           <parameter key="cas_user_provider_class">Gorg\Bundle\CasBundle\Security\User\CasUserProvider</parameter>
           <parameter key="cas_user_class">%user_class%</parameter>
           <parameter key="cas_mapping_role_attribute">%mapping_role_attribute%</parameter>
           <parameter key="cas_mapping_username_attribute">%mapping_username_attribute%</parameter>
   </parameters>

   <services>
       <service id="cas.security.authentication.listener"
         class="%auth_cas_listener_class%" public="false">
            <tag name="monolog.logger" channel="security" />
            <argument type="service" id="security.context" />
            <argument type="service" id="security.authentication.manager" />
            <argument /> <!-- Provider-shared Key -->
            <argument /> <!-- Cas Server -->
            <argument /> <!-- Cas Server Port -->
            <argument /> <!-- Cas Url Path -->
            <argument /> <!-- Cas Cert-->
            <argument /> <!-- Cas Protocol -->
            <argument /> <!-- Cas User attribute-->
            <argument type="service" id="logger" on-invalid="null" />
            <argument type="service" id="event_dispatcher" on-invalid="null"/>
       </service>
       <service id="cas.user_provider" class="%cas_user_provider_class%">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="security.encoder_factory"/>
            <argument>%cas_user_class%</argument>
            <argument>%cas_mapping_role_attribute%</argument>
            <argument>%cas_mapping_username_attribute%</argument>
       </service>
   </services>
</container>
