<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

   <parameters>
	   <parameter key="auth_cas_listener_class">Gorg\Bundle\CasBundle\Security\Firewall\CasListener</parameter>
   </parameters>

   <services>
       <service id="cas.security.authentication.listener"
         class="%auth_cas_listener_class%" public="false">
            <tag name="monolog.logger" channel="security" />
            <argument type="service" id="security.context" />
            <argument type="service" id="security.authentication.manager" />
            <argument /> <!-- Provider-shared Key -->
            <argument /> <!-- Cas Server -->
            <argument /> <!-- Cas Server Port -->
            <argument /> <!-- Cas Url Path -->
            <argument /> <!-- Cas Cert-->
            <argument /> <!-- Cas Protocol -->
            <argument /> <!-- Cas User attribute-->
            <argument type="service" id="logger" on-invalid="null" />
            <argument type="service" id="event_dispatcher" on-invalid="null"/>
       </service>
   </services>
</container>
